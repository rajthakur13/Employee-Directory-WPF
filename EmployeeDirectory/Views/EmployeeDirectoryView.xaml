<UserControl x:Class="EmployeeDirectory.Views.EmployeeDirectoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:EmployeeDirectory.ViewModels"
             xmlns:models="clr-namespace:EmployeeDirectory.Models"
             mc:Ignorable="d" 
             x:Name="EmployeeListViewControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:EmployeeViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="AddButtonStyle">
            <Setter Property="Background" Value="#2E9DD5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style TargetType="Button" x:Key="EditButtonStyle">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#2E9DD5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#2E9DD5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style BasedOn="{StaticResource EditButtonStyle}" TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="BorderBrush" Value="Red" />
            <Setter Property="Foreground" Value="Red" />
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F2F2F2"/>
                    <Setter Property="BorderBrush" Value="#F8FAFC" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2E9DD5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="2,10,2,12" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Employee Directory" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0" Padding="12,0,0,0"/>
            <Button Content="Add Employee" Style="{StaticResource AddButtonStyle}" Command="{Binding AddEmployeeCommand}" Margin="10" HorizontalAlignment="Right" Width="120" Grid.Column="1" />
        </Grid>

        <DataGrid x:Name="EmployeeDataGrid" GridLinesVisibility="None" Grid.Row="1" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" AlternationCount="2" 
          CanUserResizeRows="False"  CanUserAddRows="False">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="#000000" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="*" />
                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*" />

                <DataGridTemplateColumn Header="Action" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit" Style="{StaticResource EditButtonStyle}" Width="75"  Command="{Binding DataContext.EditEmployeeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                <Button Content="Delete" Style="{StaticResource DeleteButtonStyle}" Width="75" Command="{Binding DataContext.DeleteEmployeeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
