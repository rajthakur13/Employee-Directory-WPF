<Window x:Class="EmployeeDirectory.Views.EmployeePopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Employee" Height="430" Width="350">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SaveButtonStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock>
                    <Run Text="Name" />
                    <Run Text="*" Foreground="Red"/>
                </TextBlock>
                <TextBox x:Name="NameTextBox" Margin="0,5" Text="{Binding Name}" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock>
                    <Run Text="Email" />
                    <Run Text="*" Foreground="Red"/>
                </TextBlock>
                <TextBox x:Name="EmailTextBox" Margin="0,5" Text="{Binding Email}" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Position" />
                <TextBox x:Name="PositionTextBox" Margin="0,5" Text="{Binding Position}" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Department" />
                <TextBox x:Name="DepartmentTextBox" Margin="0,5" Text="{Binding Department}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Submit" Style="{StaticResource SaveButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Width="100" Command="{Binding SubmitCommand}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
